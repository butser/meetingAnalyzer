{
  "meeting_analyzer": {
    "version": "1.0.0",
    "description": "AI-powered meeting analyzer for generating SRS documentation"
  },
  "profile": "laptop",
  "profiles": {
    "laptop": {
      "whisper_model": "small",
      "vision_model": "llava-v1.6-mistral-7b",
      "text_model": "phi-3-mini-4k-instruct",
      "vision_on_cpu": true,
      "description": "GTX 1050 Ti (4GB VRAM), 48GB RAM"
    },
    "pc": {
      "whisper_model": "large-v3",
      "vision_model": "llava-v1.6-34b",
      "text_model": "llama-3.1-70b-instruct",
      "vision_on_cpu": false,
      "description": "RTX 4090 (24GB VRAM), 96GB RAM"
    }
  },
  "default_settings": {
    "lm_studio_url": "http://localhost:1234/v1",
    "lm_studio_model": "phi-3-mini",
    "lm_studio_vision_model": "llava-7b-q4",
    "whisper_model": "small",
    "output_directory": "output",
    "frame_extraction": {
      "method": "key_frames",
      "interval_seconds": 10,
      "max_key_frames": 15,
      "scene_change_threshold": 30.0
    },
    "audio_extraction": {
      "format": "wav",
      "sample_rate": 16000,
      "channels": 1
    },
    "analysis": {
      "max_frames_to_analyze": 10,
      "temperature": 0.3,
      "max_tokens": 3000
    }
  },
  "supported_video_formats": [
    "mp4",
    "avi",
    "mov",
    "mkv",
    "flv",
    "wmv"
  ],
  "output_formats": [
    "markdown",
    "docx",
    "json"
  ],
  "srs_sections": [
    "introduction",
    "project_overview",
    "functional_requirements",
    "non_functional_requirements",
    "technical_requirements",
    "ui_ux_requirements",
    "issues_and_concerns"
  ]
}
